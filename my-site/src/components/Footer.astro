// src/components/Footer.astro
---

<footer class="bg-white text-gray-800 py-4 mt-auto border-t border-gray-800">
  <div class="container mx-auto px-2">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-2">
      <!-- リンク -->
      <div>
        <h3 class="text-lg font-semibold mb-1">Link</h3>
        <ul class="space-y-1">
          <li><a href="/" class="text-gray-850 hover:text-gray-400 transition text-sm">Home</a></li>
          <li><a href="/store" class="text-gray-850 hover:text-gray-400 transition text-sm">Store</a></li>
          <li><a href="/blog" class="text-gray-850 hover:text-gray-400 transition text-sm">Blog/News</a></li>
          <li><a href="/contact" class="text-gray-850 hover:text-gray-400 transition text-sm">Contact</a></li>
          <li><a href="/legal" class="text-gray-850 hover:text-gray-400 transition text-sm">Legal</a></li>
        </ul>
      </div>

      <!-- SNS -->
      <div>
        <h3 class="text-lg font-semibold mb-1">Follow Us</h3>
        <div class="flex space-x-3">
          <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
            </svg>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- ニュースレター（右端） -->
      <div class="md:col-start-4 flex flex-col items-start md:items-end">
        <h3 class="text-lg font-semibold mb-1">NEWSLETTER</h3>
        <p class="text-gray-600 text-xs mb-1 text-left md:text-right">I'll send you the latest updates and new releases via email.</p>

        <!-- 埋め込みスタイル + フォーム -->
        <style>
          #gumroad-follow-form-embed{display:flex;gap:0.25rem;width:100%;}
          #gumroad-follow-form-embed-input{flex:1 1 0%;}
          /* 小さめパディングに調整 */
          #gumroad-follow-form-embed-button{background-color:#111827;color:#fff;padding:0.25rem 0.5rem;border-radius:0.3125rem;font-size:0.8rem;}
          #gumroad-follow-form-embed-input{padding:0.25rem 0.5rem;border:1px solid #e5e7eb;border-radius:0.3125rem;font-size:0.875rem;}
        </style>

        <form class="flex gap-2 mt-0 w-full md:max-w-xs justify-end" action="https://gumroad.com/follow_from_embed_form" method="post" id="gumroad-follow-form-embed">
          <input type="hidden" name="seller_id" value="289720020809"/>
          <input id="gumroad-follow-form-embed-input" type="email" placeholder="Your email address" name="email" class="flex-1" value="" required/>
          <button class="button primary" type="submit" id="gumroad-follow-form-embed-button">Join</button>
        </form>
      </div>
    </div>

    <div class="mt-4 pt-4 text-center text-gray-950 text-sm">
      <p class="m-0">&copy; 2025 kimura taro. All rights reserved.</p>
    </div>
  </div>
</footer>
