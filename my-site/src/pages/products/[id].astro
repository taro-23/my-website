---
// src/pages/products/[id].astro
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import AudioPlayer from '../../components/AudioPlayer';

export async function getStaticPaths() {
  const products = await getCollection('products');
  const productImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/img/*.png');
  
  const paths = await Promise.all(
    products.map(async (product: CollectionEntry<'products'>) => {
      const imagePath = `../../assets/img/${product.data.image}`;
      let imageModule = null;
      
      if (productImages[imagePath]) {
        imageModule = await productImages[imagePath]();
      }
      
      // .mdx拡張子を削除したスラッグを使用
      const slug = product.slug || product.id.replace(/\.mdx?$/, '');
      
      return {
        params: { id: slug },
        props: { 
          product,
          imageModule: imageModule?.default || null,
          slug
        },
      };
    })
  );
  
  return paths;
}

type Props = {
  product: CollectionEntry<'products'>;
  imageModule: ImageMetadata | null;
  slug: string;
};

const { product, imageModule, slug } = Astro.props;
const { Content } = await product.render();

// SEO用のメタデータ
const seoTitle = `${product.data.name} - kimura taro`;
const seoDescription = product.data.type === 'Sample Pack' 
  ? `${product.data.name} - High-quality ${product.data.type.toLowerCase()} for ${product.data.platform.join(', ')}. ${product.data.paid ? `${product.data.price}` : 'Free download'}.`
  : `${product.data.name} - Professional ${product.data.type.toLowerCase()} for ${product.data.platform.join(', ')}. ${product.data.paid ? `${product.data.price}` : 'Free download'}.`;

// 画像URLを生成
const productImageUrl = imageModule 
  ? new URL(`/assets/img/${product.data.image}`, Astro.site).href
  : `https://placehold.co/1200x630/111827/ffffff?text=${encodeURIComponent(product.data.name)}`;

// Product Typeをパンくずリスト用にエンコード
const productTypeEncoded = encodeURIComponent(product.data.type);

// 関連商品を取得
const allProducts = await getCollection('products');
const relatedProducts = allProducts
  .filter((p: CollectionEntry<'products'>) => p.id !== product.id && p.data.type === product.data.type)
  .slice(0, 4);

const relatedProductImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/img/*.png');
const relatedImagesMap = new Map<string, ImageMetadata>();

for (const rp of relatedProducts) {
  const imagePath = `../../assets/img/${rp.data.image}`;
  if (relatedProductImages[imagePath]) {
    const img = await relatedProductImages[imagePath]();
    relatedImagesMap.set(rp.id, img.default);
  }
}
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  type="product"
  image={productImageUrl}
>
  <div class="bg-white min-h-screen">
    <!-- パンくずリスト -->
    <div class="border-b border-gray-900">
      <nav class="container mx-auto px-4 py-4 text-sm text-gray-700">
        <a href="/" class="hover:text-gray-900 transition">Home</a>
        <span class="mx-2">/</span>
        <a href="/store" class="hover:text-gray-900 transition">Store</a>
        <span class="mx-2">/</span>
        <a href={`/store?type=${productTypeEncoded}`} class="hover:text-gray-900 transition">{product.data.type}</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{product.data.name}</span>
      </nav>
    </div>

    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- 左側: 商品画像 -->
        <div>
          <div class="sticky top-24">
            <div class="border-2 border-gray-900 overflow-hidden aspect-square bg-gray-50 p-20">
              {imageModule ? (
                <Image
                  src={imageModule}
                  alt={product.data.name}
                  width={500}
                  height={500}
                  format="webp"
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <span class="text-lg">No Image</span>
                </div>
              )}
            </div>

            <div class="mt-8 border-t-2 border-gray-900 pt-6">
              <div class="flex flex-wrap gap-8">
              </div>
            </div>
          </div>
        </div>

        <!-- 右側: 商品詳細 -->
        <div>
          <div class="mb-8 pb-10 border-b-2 border-gray-900">
            <div class="flex items-baseline gap-4 mb-6">
              <h1 class="text-2xl md:text-2xl font-bold text-gray-900 leading-tight">{product.data.name}</h1>
              <span class="text-3xl font-normal text-gray-900">
                {product.data.paid ? `$${product.data.price}` : ''}
              </span>
              {!product.data.paid && (
                <span class="bg-gray-900 text-white px-3 py-1 text-sm font-bold uppercase tracking-wide">
                  Free Download
                </span>
              )}
            </div>
            
            <!-- 商品メタ情報 -->
            <div class="flex flex-wrap gap-4 items-start">
              <div>
                <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Type</h3>
                <span class="inline-block border border-gray-900 text-gray-900 px-3 py-1.5 text-sm font-medium">
                  {product.data.type}
                </span>
              </div>
              
              <div>
                <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Platform</h3>
                <div class="flex flex-wrap gap-2">
                  {product.data.platform.map((plat: string) => (
                    <span class="inline-block bg-gray-900 text-white px-3 py-1.5 text-sm font-medium whitespace-nowrap">
                      {plat}
                    </span>
                  ))}
                </div>
              </div>

              {product.data.bundle && (
                <div>
                  <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Special</h3>
                  <span class="inline-flex items-center gap-2 border-2 border-gray-900 text-gray-900 px-3 py-1.5 text-sm font-bold">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    Bundle
                  </span>
                </div>
              )}
            </div>
          </div>

          <!-- 購入ボタン -->
          <div class="mb-10">
            <a
              href={product.data.gumroadUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full bg-gray-900 text-white text-center px-8 py-5 text-lg font-bold uppercase tracking-wide hover:bg-gray-900 transition-colors border-2 border-gray-900"
            >
              {product.data.paid ? `Purchase for $${product.data.price}` : 'Download Free'}
            </a>
            <p class="text-xs text-gray-500 text-center mt-3 uppercase tracking-wide">
              Powered by Gumroad
            </p>
          </div>

          <!-- デモ版ダウンロード -->
          {product.data.demoUrl && (
            <div class="border-2 border-gray-900 p-6 mb-10">
              <div class="flex items-start gap-4">
                <div class="shrink-0 mt-1">
                  <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-normal text-gray-900 mb-2 uppercase tracking-wide">Demo Version</h3>
                  <p class="text-sm text-gray-600 mb-4 leading-relaxed">
                    Try before you buy. Download a demo version to experience the product.
                  </p>
                  <a 
                    href={product.data.demoUrl}
                    download
                    class="inline-block bg-white text-gray-900 border-2 border-gray-900 px-6 py-3 text-sm font-bold uppercase tracking-wide hover:bg-gray-900 hover:text-white transition-colors"
                  >
                    Download Demo
                  </a>
                </div>
              </div>
            </div>
          )}

          <!-- オーディオプレーヤー -->
          {product.data.audioFiles && product.data.audioFiles.length > 0 && (
            <div class="mb-10">
              <AudioPlayer client:load audioFiles={product.data.audioFiles} />
            </div>
          )}

          <!-- Markdown コンテンツ -->
          <div class="prose prose-lg max-w-none mb-12">
            <Content />
          </div>

          <!-- 戻るボタン -->
          <div class="mt-12 pt-12 border-t border-gray-300">
            <a 
              href="/store" 
              class="inline-flex items-center gap-2 text-gray-900 hover:text-gray-600 font-bold uppercase tracking-wide text-sm transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Back to Store
            </a>
          </div>
        </div>
      </div>

      <!-- 関連商品セクション -->
      {relatedProducts.length > 0 && (
        <div class="mt-24 pt-12 border-t-2 border-gray-900">
          <h2 class="text-3xl font-bold mb-8 uppercase tracking-wide">Related Products</h2>
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
            {relatedProducts.map((rp: CollectionEntry<'products'>) => (
              <a 
                href={`/products/${rp.slug || rp.id.replace(/\.mdx?$/, '')}`}
                class="group border-2 border-gray-900 overflow-hidden hover:bg-gray-900 transition-colors"
              >
                <div class="aspect-square bg-gray-100 overflow-hidden">
                  {relatedImagesMap.has(rp.id) ? (
                    <Image
                      src={relatedImagesMap.get(rp.id)!}
                      alt={rp.data.name}
                      width={700}
                      height={700}
                      format="webp"
                      class="w-full h-full object-cover group-hover:opacity-90 transition-opacity"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <span class="text-sm">No Image</span>
                    </div>
                  )}
                </div>
                <div class="p-4 bg-white group-hover:bg-gray-950 transition-colors">
                  <h3 class="font-light text-sm mb-2 line-clamp-2 group-hover:text-white transition-colors">{rp.data.name}</h3>
                  <span class="text-xs font-light group-hover:text-white transition-colors">
                    {rp.data.paid ? `$${rp.data.price}` : 'FREE'}
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  /* Markdownコンテンツのモノクロスタイル */
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #111827;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid #111827;
    padding-bottom: 0.5rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }
  
  .prose ul, .prose ol {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }
  
  .prose strong {
    color: #111827;
    font-weight: 700;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.2rem 0.4rem;
    border: 1px solid #e5e7eb;
    font-size: 0.875em;
    font-family: 'Courier New', monospace;
  }

  .prose a {
    color: #111827;
    text-decoration: underline;
    font-weight: 600;
  }

  .prose a:hover {
    color: #4b5563;
  }
</style>