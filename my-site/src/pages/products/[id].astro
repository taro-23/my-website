---
// src/pages/products/[id].astro
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import AudioPlayer from '../../components/AudioPlayer';
import ProductSidebar from '../../components/ProductSidebar';

export async function getStaticPaths() {
  const products = await getCollection('products');
  const productImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/img/*.png');
  
  const paths = await Promise.all(
    products.map(async (product: CollectionEntry<'products'>) => {
      const imagePath = `../../assets/img/${product.data.image}`;
      let imageModule = null;
      
      if (productImages[imagePath]) {
        imageModule = await productImages[imagePath]();
      }
      
      const slug = product.slug || product.id.replace(/\.mdx?$/, '');
      
      return {
        params: { id: slug },
        props: { 
          product,
          imageModule: imageModule?.default || null,
          slug
        },
      };
    })
  );
  
  return paths;
}

type Props = {
  product: CollectionEntry<'products'>;
  imageModule: ImageMetadata | null;
  slug: string;
};

const { product, imageModule, slug } = Astro.props;
const { Content } = await product.render();

const seoTitle = `${product.data.name} - kimura taro`;
const seoDescription = product.data.type === 'Sample Pack' 
  ? `${product.data.name} - High-quality ${product.data.type.toLowerCase()} for ${product.data.platform.join(', ')}. ${product.data.paid ? `${product.data.price}` : 'Free download'}.`
  : `${product.data.name} - Professional ${product.data.type.toLowerCase()} for ${product.data.platform.join(', ')}. ${product.data.paid ? `${product.data.price}` : 'Free download'}.`;

const productImageUrl = imageModule 
  ? new URL(`/assets/img/${product.data.image}`, Astro.site).href
  : `https://placehold.co/1200x630/111827/ffffff?text=${encodeURIComponent(product.data.name)}`;

const productTypeEncoded = encodeURIComponent(product.data.type);

const allProducts = await getCollection('products');
const relatedProducts = allProducts
  .filter((p: CollectionEntry<'products'>) => p.id !== product.id && p.data.type === product.data.type)
  .slice(0, 4);

const relatedProductImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/img/*.png');
const relatedImagesMap = new Map<string, ImageMetadata>();

for (const rp of relatedProducts) {
  const imagePath = `../../assets/img/${rp.data.image}`;
  if (relatedProductImages[imagePath]) {
    const img = await relatedProductImages[imagePath]();
    relatedImagesMap.set(rp.id, img.default);
  }
}
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  type="product"
  image={productImageUrl}
  isStorePage={true}
>
  <div class="bg-white min-h-screen pt-16">
    <div class="flex">
      <!-- Left Sidebar -->
      <aside class="hidden lg:block fixed left-0 top-16 w-56 h-[calc(100vh-4rem)] bg-white border-r border-gray-850 overflow-y-auto z-30">
        <div class="p-4">
          <ProductSidebar client:load currentType={product.data.type} />
        </div>
      </aside>

      <!-- Main Content -->
      <div class="w-full lg:ml-56">
        <!-- Breadcrumb -->
        <div class="sticky top-16 bg-white border-b border-gray-950 z-20">
          <div class="px-4 py-2">
            <nav class="text-sm text-gray-700">
              <a href="/" class="hover:text-gray-900 transition">Home</a>
              <span class="mx-2">/</span>
              <a href="/store" class="hover:text-gray-900 transition">Store</a>
              <span class="mx-2">/</span>
              <a href={`/store?type=${productTypeEncoded}`} class="hover:text-gray-900 transition">{product.data.type}</a>
              <span class="mx-2">/</span>
              <span class="text-gray-900 font-medium">{product.data.name}</span>
            </nav>
          </div>
        </div>

        <!-- Product Detail Content -->
        <div class="px-8 py-12">
          <div class="grid lg:grid-cols-2 gap-12 max-w-7xl mx-auto">
            <!-- Left: Product Image -->
            <div>
              <div class="sticky top-32">
                <div class="border-2 border-gray-900 overflow-hidden aspect-square bg-gray-50 p-12">
                  {imageModule ? (
                    <Image
                      src={imageModule}
                      alt={product.data.name}
                      width={600}
                      height={600}
                      format="webp"
                      class="w-full h-full object-contain drop-shadow-xl"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <span class="text-lg">No Image</span>
                    </div>
                  )}
                </div>
              </div>
            </div>

            <!-- Right: Product Info -->
            <div>
              <div class="mb-8 pb-8 border-b-2 border-gray-900">
                <div class="flex items-baseline gap-4 mb-6">
                  <h1 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight">{product.data.name}</h1>
                  <span class="text-3xl font-normal text-gray-900">
                    {product.data.paid ? `$${product.data.price}` : ''}
                  </span>
                  {!product.data.paid && (
                    <span class="bg-gray-900 text-white px-3 py-1 text-sm font-bold uppercase tracking-wide">
                      Free
                    </span>
                  )}
                </div>
                
                <!-- Product Meta -->
                <div class="flex flex-wrap gap-4 items-start">
                  <div>
                    <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Type</h3>
                    <span class="inline-block border border-gray-900 text-gray-900 px-3 py-1.5 text-sm font-medium">
                      {product.data.type}
                    </span>
                  </div>
                  
                  <div>
                    <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Platform</h3>
                    <div class="flex flex-wrap gap-2">
                      {product.data.platform.map((plat: string) => (
                        <span class="inline-block bg-gray-900 text-white px-3 py-1.5 text-sm font-medium whitespace-nowrap">
                          {plat}
                        </span>
                      ))}
                    </div>
                  </div>

                  {product.data.bundle && (
                    <div>
                      <h3 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-wider">Special</h3>
                      <span class="inline-flex items-center gap-2 border-2 border-gray-900 text-gray-900 px-3 py-1.5 text-sm font-bold">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                        Bundle
                      </span>
                    </div>
                  )}
                </div>
              </div>

<!-- デモ + 購入を一体化 -->
<div class="mb-10 pl-5 pr-70">
  <!-- 購入ボタン（目立つスタイル） -->
    <a
      href={product.data.gumroadUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="block w-full bg-gray-900 text-white text-center px-8 py-5 text-lg font-semibold uppercase tracking-wide hover:bg-gray-950 transition-colors border-2 border-gray-900"
    >
      {product.data.paid ? `ADD TO CART` : 'Download Free'}
    </a>
    <!-- デモ（補助導線） -->
{product.data.demoUrl && (
  <div class="text-center">
    <a
      href={product.data.demoUrl}
      download
      class="text-sm font-medium underline text-gray-700 hover:text-gray-900"
    >
      ⬇ TRY DEMO VERSION
    </a>
  </div>
)}
</div>

              <!-- Audio Player -->
              {product.data.audioFiles && product.data.audioFiles.length > 0 && (
                <div class="mb-10">
                  <AudioPlayer client:load audioFiles={product.data.audioFiles} />
                </div>
              )}

              <!-- Markdown Content -->
              <div class="prose prose-lg max-w-none mb-12">
                <Content />
              </div>

              <!-- Back Button -->
              <div class="mt-12 pt-12 border-t border-gray-300">
                <a 
                  href={`/store?type=${productTypeEncoded}`}
                  class="inline-flex items-center gap-2 text-gray-900 hover:text-gray-600 font-bold uppercase tracking-wide text-sm transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                  </svg>
                  Back to {product.data.type}
                </a>
              </div>
            </div>
          </div>

          <!-- Related Products -->
          {relatedProducts.length > 0 && (
            <div class="mt-24 pt-12 border-t-2 border-gray-900 max-w-7xl mx-auto">
              <h2 class="text-3xl font-bold mb-8 uppercase tracking-wide">Related Products</h2>
              <div class="grid grid-cols-2 lg:grid-cols-4 gap-px bg-gray-200">
                {relatedProducts.map((rp: CollectionEntry<'products'>) => (
                  <a 
                    href={`/products/${rp.slug || rp.id.replace(/\.mdx?$/, '')}`}
                    class="bg-white group overflow-hidden hover:bg-gray-50 transition-colors"
                  >
                    <div class="aspect-square bg-gray-100 overflow-hidden p-8">
                      {relatedImagesMap.has(rp.id) ? (
                        <Image
                          src={relatedImagesMap.get(rp.id)!}
                          alt={rp.data.name}
                          width={400}
                          height={400}
                          format="webp"
                          class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-300 drop-shadow-xl"
                        />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center text-gray-400">
                          <span class="text-sm">No Image</span>
                        </div>
                      )}
                    </div>
                    <div class="p-4">
                      <h3 class="font-semibold text-sm mb-2 line-clamp-2 group-hover:text-gray-600 transition-colors">{rp.data.name}</h3>
                      <span class="text-xs font-bold text-gray-900">
                        {rp.data.paid ? `$${rp.data.price}` : 'FREE'}
                      </span>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #111827;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 2px solid #111827;
    padding-bottom: 0.5rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }
  
  .prose ul, .prose ol {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }
  
  .prose strong {
    color: #111827;
    font-weight: 700;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.2rem 0.4rem;
    border: 1px solid #e5e7eb;
    font-size: 0.875em;
    font-family: 'Courier New', monospace;
  }

  .prose a {
    color: #111827;
    text-decoration: underline;
    font-weight: 600;
  }

  .prose a:hover {
    color: #4b5563;
  }
</style>